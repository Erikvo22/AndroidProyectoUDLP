<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eriks.appfinal.Inicio"
    android:background="#FFFF00">

    <TextView
        android:text="UniÃ³n Deportiva Las Palmas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textView18"
        android:textColor="#0088DC"
        android:textStyle="normal|bold|italic"
        android:textSize="25dp" />


    <ImageButton
        android:layout_width="220dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/udradio"
        android:id="@+id/udradio"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tiendatitulo"
        android:id="@+id/tienda"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/resultadostitulo"
        android:id="@+id/resultados"
        android:background="@android:color/background_light"
        android:layout_below="@+id/tienda"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_marginTop="17dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/videotecatitulo"
        android:id="@+id/videoteca"
        android:background="@android:color/background_light"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/resultados"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
